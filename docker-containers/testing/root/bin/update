#!/bin/bash

echo "Stopping Emby..."
s6-svc -d /var/run/s6/services/emby-server > /dev/null 2>&1
echo "Updating Emby..."
apt-get update -qq > /dev/null 2>&1
apt-get install --only-upgrade -qy emby-server > /dev/null 2>&1
echo "Starting Emby..."
s6-svc -u /var/run/s6/services/emby-server > /dev/null 2>&1
