#!/bin/sh
# postinst script for emby
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
PROGRAMDATA=/var/lib/emby

case "$1" in
    configure)
    # rename mediabrowser group if it does exist
    if getent group mediabrowser > /dev/null; then
        groupmod --new-name emby mediabrowser
    fi
    
    # create emby group if it does not exist
    if ! getent group emby > /dev/null; then
        addgroup --quiet --system emby
    fi

    # rename mediabrowser user if it does exist
    if getent passwd mediabrowser > /dev/null; then
        usermod -l emby -d /var/lib/emby -m mediabrowser
    fi

    # create emby user if it does not exist
    if ! getent passwd emby > /dev/null; then
        adduser --system --ingroup emby --home /var/lib/emby emby \
            --gecos "Emby Server default user"
    fi

    # ensure /var/lib/emby has appropriate permissions
    [ ! -d /var/lib/emby ] && mkdir /var/lib/emby
    chown -R emby:emby /var/lib/emby
    # ensure app path ahs appropriate permissions
    chown -R emby:emby /opt/emby

    # for debconf
    . /usr/share/debconf/confmodule
    # let the user know about emby and permissions
    db_input low emby/permissions || true
    db_go || true

    # user?
    db_input low emby/user || true
    db_go || true

    db_get emby/user
    dbuser="$RET"

    [ -n $dbuser ] && sed -i "s#(EB_USER.*=).*#\1\"$dbuser\"#" $DEFAULT_FILE
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
